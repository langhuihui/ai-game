doctype html
html(lang="zh-CN")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title MCP 游戏服务器管理界面
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet")
    link(href="/styles.css" rel="stylesheet")
  body
    .container-fluid
      .row
        // Sidebar
        .col-md-3.col-lg-2.sidebar.p-3
          h4.mb-4
            i.bi.bi-controller
            |  MCP 游戏服务器
          nav.nav.flex-column
            a.nav-link(href="/" class=(page === 'dashboard' ? 'active' : ''))
              i.bi.bi-speedometer2
              |  仪表板
            a.nav-link(href="/characters" class=(page === 'characters' ? 'active' : ''))
              i.bi.bi-people
              |  角色列表
            a.nav-link(href="/scenes" class=(page === 'scenes' ? 'active' : ''))
              i.bi.bi-geo-alt
              |  场景列表
            a.nav-link(href="/items" class=(page === 'items' ? 'active' : ''))
              i.bi.bi-box
              |  物品列表
            a.nav-link(href="/logs" class=(page === 'logs' ? 'active' : ''))
              i.bi.bi-journal-text
              |  行为日志
            a.nav-link(href="/mcp-config" class=(page === 'mcp-config' ? 'active' : ''))
              i.bi.bi-gear
              |  MCP 配置
        
        // Main Content
        .col-md-9.col-lg-10.main-content.p-4
          block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/app.js")

